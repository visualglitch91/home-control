{
  "name": "hass-custom-dashboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prerun": "echo \"\\\"$(date +%s)\\\"\" > src/version.json",
    "start": "yarn prerun && vite",
    "build": "yarn prerun && yarn lint && vite build",
    "lint": "eslint --max-warnings=0 --ext .tsx,.ts,.jsx,.js ./src && tsc --project ./tsconfig.json --noEmit"
