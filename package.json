{
  "name": "hass-custom-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "set-version": "echo \"\\\"$(date +%s)\\\"\" > src/version.json",
    "start": "yarn set-version && react-scripts start",
    "build": "yarn set-version && react-scripts build",
    "lint": "eslint --max-warnings=0 --ext .tsx,.ts,.jsx,.js ./src && tsc --project ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@uiw/react-color-wheel": "^1.1.1",
    "add": "^2.0.6",
    "better-scroll": "^2.5.0",
    "contactjs": "^2.1.4",
    "hls.js": "^1.2.7",
    "home-assistant-js-websocket": "^8.0.0",
    "macy": "^2.5.1",
    "preact": "^10.11.3",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-ripples": "^2.2.1",
    "react-transition-group": "^4.4.5",
    "simplebar": "^5.3.9",
    "tiny-emitter": "^2.1.0",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@types/node": "^16.18.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/react-transition-group": "^4.4.5",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
