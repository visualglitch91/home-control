{
  "name": "home-control",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "prerun": "echo \"\\\"$(date +%s)\\\"\" > src/client/version.json",
    "dev:client": "npm run prerun && vite",
    "dev:server": "PORT=5700 vite-node src/server/index.ts",
    "dev": "run-p dev:*",
    "start": "PORT=5173 vite-node src/server/index.ts",
    "build": "npm run prerun && tsc && vite build",
    "postbuild": "cp src/client/robots.txt dist && cp -R src/client/assets/icons dist/icons"
  },
  "dependencies": {
    "@uiw/react-color-wheel": "^1.4.2",
    "axios": "^1.5.0",
    "body-parser": "^1.20.2",
    "color-rgba": "^3.0.0",
    "cookie-parser": "^1.4.6",
    "dockerode": "^3.3.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "home-assistant-js-websocket": "^8.2.0",
    "humanize-duration": "^3.30.0",
    "macy": "^2.5.1",
    "pm2": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-slider": "^2.0.6",
    "vite-node": "^0.26.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.50.0",
    "eslint-config-react-app": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "tsx": "^3.12.3",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-pwa": "^0.16.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  }
}
